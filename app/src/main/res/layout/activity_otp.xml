<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_190sdp"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_200sdp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="match_parent"
                            android:padding="@dimen/_15sdp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/otp_bg"/>
                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivBackForgetId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="@dimen/_10sdp"
                        android:src="@drawable/ic_arrow_back"/>

                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ubuntu_bold"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="Verify Your Number"
                    android:textColor="@color/inputColor"
                    android:textFontWeight="600"
                    android:textSize="@dimen/_20sdp"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksand_variablefont_wght"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="Lorem ipsum dolor sit amet, consectetur  ."
                    android:textColor="@color/inputColor"
                    android:textFontWeight="600"
                    android:textSize="@dimen/_10sdp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/_20sdp"
                android:paddingBottom="@dimen/_20sdp"
                android:paddingLeft="@dimen/_15sdp"
                android:paddingRight="@dimen/_15sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <in.aabhasjindal.otptextview.OtpTextView
                    android:layout_marginTop="@dimen/_25sdp"
                    android:id="@+id/otp_view_Id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_gravity="center_horizontal"
                    app:bar_active_color="@color/white"
                    app:bar_enabled="true"
                    app:bar_error_color="@color/black"
                    app:bar_height="2dp"
                    app:otp_box_background="@drawable/border_et_shape"
                    app:bar_margin="@dimen/_5sdp"
                    app:bar_inactive_color="@color/white"
                    app:height="@dimen/_50sdp"
                    app:length="4"
                    app:otp_text_size="@dimen/_12sdp"
                    app:width="@dimen/_50sdp" />

                <LinearLayout
                    android:id="@+id/liresendotpId"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/liresendotpMainId"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/_10sdp"
                            android:padding="@dimen/_8sdp"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_mobile"
                            android:layout_height="@dimen/_15sdp"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:text="Edit Number"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:textColor="@color/inputColor"
                            android:layout_gravity="center"
                            android:textSize="@dimen/_10sdp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginStart="@dimen/_30sdp"
                        android:layout_width="wrap_content"
                        android:id="@+id/lieditNumberid"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/_15sdp"
                            android:padding="@dimen/_8sdp"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_resentotp"
                            android:layout_height="@dimen/_15sdp"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:text="Resend Code"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:textColor="@color/inputColor"
                            android:layout_gravity="center"
                            android:id="@+id/tveditnumberId"
                            android:textSize="@dimen/_10sdp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5sdp" />
                    </LinearLayout>

                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_send"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="@dimen/_170sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_40sdp"
                    android:background="@drawable/button_shape"
                    android:text="Verify otp"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/_12sdp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>