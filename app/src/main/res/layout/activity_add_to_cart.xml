<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_back_noti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:weightSum="1"
                android:orientation="horizontal"
                android:padding="@dimen/_15sdp"
                android:background="@color/lightcolorGray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_weight="0.85"
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/_10sdp"
                        android:text="Delivering At"
                        android:drawablePadding="@dimen/_6sdp"
                        android:textColor="@color/inputColor"
                        android:drawableLeft="@drawable/ic_location"
                        android:layout_height="wrap_content">
                    </androidx.appcompat.widget.AppCompatTextView>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_width="wrap_content"
                        android:text="- Lorum lpsum is lorum"
                        android:textSize="@dimen/_10sdp"
                        android:layout_height="wrap_content">
                    </androidx.appcompat.widget.AppCompatTextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="0.15"
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/_10sdp"
                        android:text="Edit"
                        android:drawablePadding="@dimen/_5sdp"
                        android:textColor="@color/inputColor"
                        android:drawableLeft="@drawable/ic_edit"
                        android:layout_height="wrap_content">
                    </androidx.appcompat.widget.AppCompatTextView>


                </LinearLayout>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:id="@+id/rv_addtocart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </androidx.recyclerview.widget.RecyclerView>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/kkk"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="15sp"
                android:layout_marginEnd="5sp"
                android:gravity="left"
                android:textAllCaps="true"
                android:text="Price details"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp" />

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_8sdp"
    app:cardBackgroundColor="@color/lightcolorGray"
    app:cardCornerRadius="7sp">

    <LinearLayout
        android:id="@+id/rivSweetCatRowId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="vertical"
            android:paddingTop="@dimen/_10sdp"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/kkk"
                    android:layout_marginStart="5sp"
                    android:layout_marginEnd="5sp"
                    android:gravity="left"
                    android:text="Sub Total"
                    android:textColor="@color/inputColor"
                    android:textSize="@dimen/_11sdp" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:paddingRight="@dimen/_10sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:paddingLeft="@dimen/_10sdp"
                    android:text="$ 100"
                    android:textColor="@color/inputColor"
                    android:textSize="@dimen/_11sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/_7sdp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/kkk"
                    android:layout_marginStart="5sp"
                    android:layout_marginEnd="5sp"
                    android:gravity="left"
                    android:text="Delivery Charges "
                    android:textColor="@color/inputColor"
                    android:textSize="@dimen/_11sdp" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:paddingRight="@dimen/_10sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:paddingLeft="@dimen/_10sdp"
                    android:text="$ 88"
                    android:textColor="@color/inputColor"
                    android:textSize="@dimen/_11sdp" />
            </LinearLayout>

            <View
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/dotted_line"
                android:layout_width="match_parent"
                android:layout_height="2dp">
            </View>

            <LinearLayout
                android:layout_marginTop="@dimen/_7sdp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/kkk"
                    android:layout_marginStart="5sp"
                    android:layout_marginEnd="5sp"
                    android:gravity="left"
                    android:text="Amount Payable"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:paddingRight="@dimen/_10sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:paddingLeft="@dimen/_10sdp"
                    android:text="$ 376"
                    android:textColor="@color/inputColor"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_checkout"
                android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_40sdp"
                android:layout_marginLeft="@dimen/_40sdp"
                android:background="@drawable/button_shape"
                android:text="Checkout"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_12sdp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>