<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_back_noti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <androidx.core.widget.NestedScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

       <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/vpHomeFirstBannerId"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_5sdp" />

        <com.google.android.material.tabs.TabLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:id="@+id/tlHomeFirstBannerId"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="120sp"
            android:layout_marginRight="120sp"
            android:layout_marginBottom="1sp"
            app:tabBackground="@drawable/tab_big_selector"
            app:tabGravity="center"
            app:tabIndicatorHeight="0dp"
            app:tabPaddingEnd="7dp"
            app:tabPaddingStart="7dp"
            app:tabTextColor="@android:color/transparent" />
    </RelativeLayout>

        <LinearLayout
            android:padding="@dimen/_8sdp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:orientation="vertical"
                    android:layout_weight="1.3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/kkk"
                        android:layout_marginStart="5sp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="5sp"
                        android:gravity="left"
                        android:text="Tata salt"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sdp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_title"
                        android:layout_marginStart="5sp"
                        android:layout_marginTop="5sp"
                        android:layout_marginEnd="5sp"
                        android:text="Regular, Delicious"
                        android:gravity="left"
                        android:textColor="@color/inputColor"
                        android:textSize="@dimen/_11sdp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="0.7"
                    android:id="@+id/kkk"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/rivserachid"
                        android:src="@drawable/product_detail_img"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="center_horizontal" />

                </LinearLayout>

            </LinearLayout>



            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="5sp"
                android:text="Lorum lpsum Lorum lpsum Lorum lpsum Lorum lpsum Lorum lpsum Lorum lpsum Lorum lpsum Lorum lpsum Lorum lpsum Lorum lpsum Lorum lpsum Lorum lpsum Lorum lpsum  "
                android:gravity="left"
                android:textColor="@color/inputColor"
                android:textSize="@dimen/_11sdp"
                />

        </LinearLayout>


        <LinearLayout
            android:background="@drawable/product_detail_bg"
            android:layout_marginTop="@dimen/_15sdp"
            android:weightSum="2"
            android:padding="@dimen/_10sdp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <LinearLayout
                android:paddingTop="@dimen/_8sdp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginLeft="@dimen/_5sdp"
                android:orientation="vertical"
                android:layout_weight="1.3"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/kkk"
                    android:layout_marginStart="5sp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="5sp"
                    android:gravity="left"
                    android:text="$ 188"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_title"
                    android:layout_marginStart="5sp"
                    android:layout_marginTop="5sp"
                    android:layout_marginEnd="5sp"
                    android:text="20% Off Today"
                    android:gravity="left"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/_11sdp"
                    />
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="0.7"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/quntityende"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="right"
                    android:background="@drawable/border_et_shape"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/decrement"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10sp"
                        android:background="@drawable/minus" />

                    <View
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_toRightOf="@+id/decrement"
                        android:background="@color/colorGray"
                        android:layout_width="1dp"
                        android:layout_height="@dimen/_22sdp">
                    </View>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/quntity"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="1"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/inputColor">
                    </androidx.appcompat.widget.AppCompatTextView>

                    <View
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:layout_toRightOf="@+id/quntity"
                        android:background="@color/colorGray"
                        android:layout_width="1dp"
                        android:layout_height="@dimen/_22sdp">
                    </View>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/increment"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="right"
                        android:layout_marginEnd="10sp"
                        android:background="@drawable/plus"
                        android:gravity="right">

                    </androidx.appcompat.widget.AppCompatImageView>

                </RelativeLayout>

            </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_margin="@dimen/_8sdp"
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/border_et_shape"
                    android:text="Add to cart"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:textAllCaps="true"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_10sdp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_35sdp"
                    android:background="@drawable/green_button_shape"
                    android:text="Buy Now"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_10sdp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</LinearLayout>


